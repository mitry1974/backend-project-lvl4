{
    "configurations": [
        {
            "name": "Debug Jest tests",
            "type": "node",
             "request": "launch",
             "runtimeArgs": [
                "--inspect-brk",
               "${workspaceRoot}/node_modules/.bin/jest",
               "--runInBand",
               "users.test.js",
            //    "-t Get user data, not logged in",
             ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Launch Program",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
            "program": "server/bin/server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}