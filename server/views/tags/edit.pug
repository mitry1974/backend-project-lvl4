extends ../layouts/application.pug

block nav-items
  +tasksNavItems

block header
  = t('views.tags.edit.caption')

block content
  +formFor()(novalidate action=route('updateTag', { id: formData.id }) method='post' readonly)&attributes(attributes)
    .form-row
      +addInput('input', formData, 'id', t('views.id'), { errors, divClass: 'col-md-2 mb-3'})(readonly)
      +addInput('input', formData, 'name', t('views.tags.name'), { errors, divClass: 'col-md-5 mb-3' })
    +submitFor('put')(value = t('views.edit.submit'))
