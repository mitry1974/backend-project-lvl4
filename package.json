{
  "name": "backend-project-lvl4",
  "version": "1.0.0",
  "description": "Hexlet nackend node.js project 4 level",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run build",
    "clean": "rm -rf dist",
    "build": "npm run clean && npx webpack -p && NODE_ENV=production npx babel server --out-dir dist/server && babel config --out-dir dist/config && cp webpack.config.js dist && cp .env.sample dist/.env && cp -r server/views dist/server/",
    "start": "NODE_ENV=production NODE_CONFIG_DIR=./dist/config node -r dotenv/config dist/server/bin/server.js dotenv_config_path=./dist/production.env",
    "start:server:dev": "npx nodemon --exec npx babel-node -r dotenv/config server/bin/server.js dotenv_config_path=./development.env",
    "start:frontend:dev": "npx webpack-dev-server",
    "start:dev": "heroku local -f Procfile.dev",
    "test": "npx jest --testPathIgnorePatterns=utils.js --setupFiles dotenv/config dotenv_config_path=./test.env",
    "test-dev": "npx jest --testPathIgnorePatterns=utils.js --watchAll"
  },
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "bootstrap": "^4.4.1",
    "class-validator": "^0.12.1",
    "config": "^3.3.1",
    "connect-flash": "^0.1.1",
    "css-loader": "^3.5.2",
    "dotenv": "^8.2.0",
    "fastify": "^2.14.1",
    "fastify-cookie": "^3.6.0",
    "fastify-error-page": "^3.0.0",
    "fastify-flash": "^1.0.6",
    "fastify-formbody": "^3.2.0",
    "fastify-method-override": "^1.1.0",
    "fastify-reverse-routes": "^1.1.0",
    "fastify-secure-session": "^1.2.0",
    "fastify-session": "^3.3.0",
    "fastify-static": "^2.7.0",
    "fastify-typeorm": "^2.1.1",
    "i18next": "^19.4.3",
    "i18next-node-fs-backend": "^2.1.3",
    "lodash": "^4.17.15",
    "pg": "^8.1.0",
    "pino-pretty": "^4.0.0",
    "point-of-view": "^3.8.0",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "rollbar": "^2.15.2",
    "sqlite3": "^4.2.0",
