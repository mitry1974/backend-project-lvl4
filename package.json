{
  "name": "backend-project-lvl4",
  "version": "1.0.0",
  "description": "Hexlet nackend node.js project 4 level",
  "engines": {
    "node": "14.4.0"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npx webpack-cli -p && NODE_ENV=production npx babel server --out-dir dist/server && babel config --out-dir dist/config && cp webpack.config.js package.json dist && cp -r server/views dist/server/ && npm run migrations:run",
    "start": "NODE_ENV=production NODE_CONFIG_DIR=./dist/config cd ./dist && node -r dotenv/config server/bin/server.js",
    "start:dev:client": "NODE_ENV=development npx webpack-dev-server ",
    "start:dev:server": "NODE_ENV=development npx nodemon --exec DEBUG=application:* npx babel-node -r dotenv/config server/bin/server.js",
    "start:dev:server:inspect": "NODE_ENV=development npx nodemon --exec DEBUG=application:* npx babel-node -r dotenv/config server/bin/server.js --inspect --source-maps inline",
    "start:dev": "npx concurrently npm:start:dev:client npm:start:dev:server",
    "start:dev:inspect": "npx concurrently npm:start:dev:client npm:start:dev:server:inspect",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "migrations:run": "npx sequelize db:migrate",
    "seeds:run": "npx sequelize db:seed:all"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
